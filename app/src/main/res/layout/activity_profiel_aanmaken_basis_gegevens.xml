<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.nadir.dyn_form.profiel_aanmaken_basis_gegevens"
    android:background="#ff000000"
    android:backgroundTint="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Voornaam"
        android:id="@+id/voornaam"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="75dp"
        android:textColor="#ff2a8171" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Achternaam"
        android:id="@+id/achternaam"
        android:layout_below="@+id/voornaam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:textColor="#ff2a8171" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Email"
        android:id="@+id/email"
        android:layout_below="@+id/achternaam"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:textColor="#ff2a8171" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_voornaam"
        android:minWidth="200dp"
        android:layout_alignBottom="@+id/voornaam"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#ff2a8171" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_achternaam"
        android:layout_above="@+id/email"
        android:layout_alignLeft="@+id/txt_voornaam"
        android:layout_alignStart="@+id/txt_voornaam"
        android:minWidth="200dp"
        android:backgroundTint="#ff2a8171" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_email"
        android:layout_alignBottom="@+id/email"
        android:layout_alignLeft="@+id/txt_achternaam"
        android:layout_alignStart="@+id/txt_achternaam"
        android:minWidth="200dp"
        android:backgroundTint="#ff2a8171" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Volgende"
        android:id="@+id/btn_volgende_1"
        android:background="#ff2a8171"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/lbl_rijbewijs"
        android:layout_toEndOf="@+id/lbl_rijbewijs" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Rijbewijs"
        android:id="@+id/lbl_rijbewijs"
        android:textColor="#ff2a8171"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_rijbewijs"
        android:minWidth="200dp"
        android:backgroundTint="#ff2a8171"
        android:layout_alignBottom="@+id/lbl_rijbewijs"
        android:layout_alignLeft="@+id/txt_email"
        android:layout_alignStart="@+id/txt_email" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/imgView1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
