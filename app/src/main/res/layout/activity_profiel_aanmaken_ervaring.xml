 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="be.ehb.ipg13.fastjobs.profiel_aanmaken_ervaring"
        android:background="#fff">

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="410dp"
            android:id="@+id/scrollView"
            style="@style/Widget.AppCompat.Spinner.DropDown"
            android:background="#ff2a8171"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/rell"></RelativeLayout>
        </ScrollView>

        <Button
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:text="@string/Volgende"
            android:id="@+id/btn_volgende_3"
            android:layout_below="@+id/scrollView"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:background="#ff2a8171"
            android:textColor="#fff"
            android:layout_alignRight="@+id/scrollView"
            android:layout_alignEnd="@+id/scrollView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Skip"
            android:id="@+id/lbl_skip_3"
            android:textColor="#ff2a8171"
            android:textStyle="bold"
            android:layout_alignTop="@+id/btn_volgende_3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="10dp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/imgView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
