<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.ehb.ipg13.fastjobs.profiel_aanmaken_jobvoorkeuren">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_gemeente"
        android:minWidth="250dp"
        android:textColorHint="#ff2a8171"
        android:layout_above="@+id/btn_volgende_5"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="41dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_km"
        android:minWidth="75dp"
        android:textColorHint="#ff2a8171"
        android:layout_alignTop="@+id/txt_gemeente"
        android:layout_alignRight="@+id/spnr_soortJob"
        android:layout_alignEnd="@+id/spnr_soortJob" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/spnr_tijdsregeling"
        android:background="#ff2a8171"
        android:layout_above="@+id/lbl_soortJob"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tijdsregeling"
        android:id="@+id/lbl_tijdsregeling"
        android:layout_above="@+id/spnr_tijdsregeling"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Soort job"
        android:id="@+id/lbl_soortJob"
        android:layout_above="@+id/spnr_soortJob"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/spnr_soortJob"
        android:dropDownSelector="#ffff5351"
        android:background="#ff2a8171"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/lbl_gemeente"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gemeente"
        android:id="@+id/lbl_gemeente"
        android:layout_above="@+id/txt_gemeente"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Volgende"
        android:id="@+id/btn_volgende_5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff2a8171"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Skip"
        android:id="@+id/lbl_skip_5"
        android:textColor="#ff2a8171"
        android:textStyle="bold"
        android:layout_alignTop="@+id/btn_volgende_5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="km"
        android:id="@+id/lbl_km"
        android:layout_alignTop="@+id/lbl_gemeente"
        android:layout_alignRight="@+id/spnr_soortJob"
        android:layout_alignEnd="@+id/spnr_soortJob"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/imgView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Profiel naam"
        android:id="@+id/lbl_profielNaam"
        android:layout_above="@+id/txt_profielNaam"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_profielNaam"
        android:layout_above="@+id/lbl_tijdsregeling"
        android:layout_alignParentStart="true" />

</RelativeLayout>
