<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.ehb.ipg13.fastjobs.profiel_aanmaken_jobvoorkeuren_trefwoorden">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Trefwoorden"
        android:id="@+id/txt_trefwoorden"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp" />

    <EditText
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:id="@+id/txt_trefwoord"
        android:layout_below="@+id/txt_trefwoorden"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Opslaan"
        android:id="@+id/btn_opslaan"
        android:background="#ff2a8171"
        android:textColor="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/imgView6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/txt_trefwoord"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:id="@+id/layout_1"
        android:background="#ffc9c9c9"
        android:columnCount="27">

    </GridLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/layout_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="55dp"
        android:background="#ffc9c9c9"
        android:id="@+id/layout_2"
        android:columnCount="20"></GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Gekozen tags"
        android:id="@+id/lbl_gekozen_tags"
        android:layout_below="@+id/layout_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="ADD"
        android:id="@+id/btn_add"
        android:layout_alignBottom="@+id/txt_trefwoord"
        android:layout_alignRight="@+id/layout_1"
        android:layout_alignEnd="@+id/layout_1"
        android:layout_marginTop="10dp" />

</RelativeLayout>
