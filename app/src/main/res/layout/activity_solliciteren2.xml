<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget41"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:scrollbars="vertical"
    android:baselineAligned="true">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/vactureNaam"
        android:layout_weight="0.18"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/bedrijfsNaam"
        android:textSize="14dp"
        android:textColor="#000000"
        android:layout_weight="0.18"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/solliciteren"
        android:textColor="#000000"
        android:textSize="14dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.18"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:linksClickable="true"/>

    <Button
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Bellen"
        android:id="@+id/bellen"
        android:background="#ff2a8171"
        android:layout_marginBottom="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"/>

    <Button
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Email verzenden"
        android:id="@+id/mailen"
        android:background="#ff2a8171"
        android:layout_marginBottom="8dp"

        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Solliciteer online"
        android:id="@+id/web"
        android:background="#ff2a8171"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="Toon op kaart"
        android:id="@+id/kaart"
        android:background="#ff2a8171"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp" />
</LinearLayout>
