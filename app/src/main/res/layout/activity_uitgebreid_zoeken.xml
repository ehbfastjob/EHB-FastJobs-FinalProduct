<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="be.ehb.ipg13.fastjobs.Uitgebreid_zoeken">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Uitgebreid zoeken"
        android:id="@+id/lbl_Uitgebreid_zoeken"
        android:textSize="22sp"
        android:textColor="#ff2a8171"
        android:layout_marginLeft="10sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trefwoorden"
        android:id="@+id/lbl_trefwoorden"
        android:layout_below="@+id/lbl_Uitgebreid_zoeken"
        android:layout_alignStart="@+id/lbl_Uitgebreid_zoeken"
        android:textColor="#ff2a8171"
        android:textSize="20sp"
        android:layout_marginTop="5sp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_trefwoorden"
        android:layout_below="@+id/lbl_trefwoorden"
        android:layout_alignStart="@+id/lbl_trefwoorden"
        android:layout_marginTop="5sp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diploma"
        android:id="@+id/lbl_Diploma"
        android:layout_marginTop="10sp"
        android:textColor="#ff2a8171"
        android:textSize="20sp"
        android:layout_marginLeft="10sp"
        android:layout_below="@+id/txt_trefwoorden"
        android:layout_alignStart="@+id/txt_trefwoorden" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnr_diploma"
        android:layout_below="@+id/lbl_Diploma"
        android:layout_marginTop="5sp"
        android:background="#ff2a8171"
        android:layout_alignParentEnd="true"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type job"
        android:id="@+id/lbl_Type_job"
        android:layout_below="@+id/spnr_diploma"
        android:layout_alignStart="@+id/lbl_Diploma"
        android:layout_marginTop="10sp"
        android:textColor="#ff2a8171"
        android:textSize="20sp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnr_typeJob"
        android:background="#ff2a8171"
        android:layout_below="@+id/lbl_Type_job"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soort job"
        android:id="@+id/lbl_soortJob"
        android:layout_marginTop="10sp"
        android:textColor="#ff2a8171"
        android:textSize="20sp"
        android:layout_below="@+id/spnr_typeJob"
        android:layout_alignStart="@+id/txt_trefwoorden" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spnr_soortJob"
        android:layout_below="@+id/lbl_soortJob"
        android:background="#ff2a8171"
        android:layout_marginTop="5sp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gemeente"
        android:id="@+id/lbl_gemeente"
        android:layout_below="@+id/spnr_soortJob"
        android:layout_alignStart="@+id/lbl_soortJob"
        android:textColor="#ff2a8171"
        android:textSize="20sp"
        android:layout_marginTop="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afstand / km"
        android:id="@+id/lbl_afstand"
        android:textColor="#ff2a8171"
        android:textSize="20sp"
        android:layout_marginRight="10sp"
        android:layout_below="@+id/spnr_soortJob"
        android:layout_alignEnd="@+id/txt_trefwoorden"
        android:layout_marginTop="10sp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Zoeken"
        android:id="@+id/btn_zoeken"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#ff2a8171"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_gemeente"
        android:layout_below="@+id/lbl_gemeente"
        android:layout_alignEnd="@+id/lbl_Uitgebreid_zoeken" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_afstand"
        android:layout_alignTop="@+id/lbl_afstand"
        android:layout_alignStart="@+id/lbl_afstand"
        android:layout_marginTop="25dp"
        android:layout_alignEnd="@+id/lbl_afstand" />

</RelativeLayout>
