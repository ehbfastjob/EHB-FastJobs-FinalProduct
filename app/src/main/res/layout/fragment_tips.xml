<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="be.ehb.ipg13.fastjobs.Tips">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal|top"
        android:weightSum="1">

        <Button

            android:text="TipsVoorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/voorbutton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"

            android:textColor="#ff2a8171"
            />


        <Button
            android:text="TipsTijdensButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/tijdensbutton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"

            android:background="#ff2a8171"
            android:textColor="#ffffffff"
            />

        <Button
            android:text="TipsNarButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/nabutton"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.33"
            android:textColor="#ff2a8171"
            />


    </LinearLayout>
</FrameLayout>
